<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_user_profile" >


        <EditTextPreference

            android:title="@string/pref_user_name"
            android:summary="@string/pref_user_name_summary"
            android:key="prefUsername"/>


        <ListPreference
            android:key="sex"
            android:title="@string/gender"
            android:entries="@array/sex"
            android:entryValues="@array/sex"/>

    </PreferenceCategory>


    <PreferenceCategory android:title="@string/pref_session" >


        <Preference android:title="@string/pref_log_out"
                    android:key="@string/pref_log_out"
                    android:summary="@string/pref_session_end"/>

    </PreferenceCategory>

</PreferenceScreen>