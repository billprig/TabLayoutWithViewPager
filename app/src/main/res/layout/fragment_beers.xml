<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="roy.tablayoutwithviewpager.DrinksFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beers have 5% alcohol"
        android:id="@+id/textView"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton250"
        android:background="@drawable/ml250"
        android:onClick="set_beer250"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ml330"
        android:onClick="set_beer330"
        android:id="@+id/imageButton330"
        android:layout_alignTop="@+id/imageButton250"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton500"
        android:onClick="set_beer500"
        android:background="@drawable/ml500"
        android:layout_alignTop="@+id/imageButton330"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/l1"
        android:id="@+id/imageButton1lit"
        android:onClick="set_beer1l"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButton330"
        android:layout_alignStart="@+id/imageButton330"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="250 ml"
        android:id="@+id/textView2"
        android:textAlignment="inherit"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/imageButton250"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="330 ml"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="500 ml"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/imageButton500"
        android:layout_alignStart="@+id/imageButton500"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1000 ml"
        android:id="@+id/textView5"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/imageButton1lit"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
